<Application x:Class="dotPad.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:dotPad" xmlns:c="clr-namespace:dotPad.Converter"
             Startup="Application_Startup"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style/ScrollViewerStyle.xaml"/>
                <ResourceDictionary Source="Style/ExtendedRadioButtonStyle.xaml"/>
                <ResourceDictionary Source="Style/CommonStyle.xaml"/>
     </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="Bool2Visibility"/>
            <c:WrapBoolConverter x:Key="WrapBool"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
